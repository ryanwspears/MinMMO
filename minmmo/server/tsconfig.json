{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "paths": {
      "@game-config/defaults": [
        "../packages/game-config/src/defaults.ts"
      ],
      "@game-config/*": [
        "../packages/game-config/src/*"
      ],
      "@game-config/schema": [
        "../packages/game-config/src/schema.ts"
      ],
      "@game-config/validate": [
        "../packages/game-config/src/validate.ts"
      ]
    },
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "./**/*.ts"
  ]
}
